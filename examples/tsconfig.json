{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ESNext",
      "ScriptHost"
    ],
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  }
}